{% set current = page.url %}
<header class="main-navigation">
  <nav aria-label="Main navigation">
    <a class="logo" href="/" aria-hidden="true" tabindex="-1" rel="home">
    <!--TODO try eleventy image; keep alt empy to mark it decorative; fixed size to prevent layout shift-->
    </a>

      <div class="navigation">
        <div class="blog-name">
          {{site.title}}
        </div>

        <div class="menu-container">
          <ul class="menu-items">
            {% set isHome = (current == '/') %}
            <li>
              <a href="/" {% if isHome %}class="active" aria-current="page"{% endif %}>Home</a>
            </li>
            {% set isTopics = current.startsWith('/archives/') %}
            <li>
              <a href="/archives/" {% if isTopics %}class="active" aria-current="page"{% endif %}>Topics</a>
            </li>
            {% set isAbout = (current == '/about/') %}
            <li>
              <a href="/about/" {% if isAbout %}class="active" aria-current="page"{% endif %}>About <span class="not-small-screen">me</span></a>
            </li>
          </ul>
          {% from "components/search.njk" import renderSearch %}
          {{ renderSearch('search') }}
        </div>
      </div>
  </nav>
</header>