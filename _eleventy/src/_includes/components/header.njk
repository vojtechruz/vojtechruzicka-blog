{% set current = page.url %}
<header class="main-navigation">
  <nav aria-label="Main navigation">
    <a class="logo" href="/" aria-hidden="true" tabindex="-1" rel="home">
    <!--TODO try eleventy image; keep alt empy to mark it decorative; fixed size to prevent layout shift-->
    </a>

      <div class="navigation">
        <div class="blog-name">
          {{site.title}}
        </div>

        <div class="menu-container">
          <ul class="menu-items">
            <li>
              <a href="/"
                 {% if current == '/' %}
              class="active" aria-current="page"
              {% endif %}>
              Home
              </a>
            </li>
            <li>
              <a href="/archives/"
                {% if current.startsWith('/archives/') %}
                  class="active" aria-current="page"
                {% endif %}>
              Topics
              </a>
            </li>
            <li>
              <a href="/about/"
                {% if current == '/about/' %}
                  class="active" aria-current="page"
                  {% endif %}>
                About <span class="not-small-screen">me</span>
              </a>
            </li>
          </ul>
          <div class="nav-search" role="search">
            <div id="search">
              <!-- This content gents on demand replaced by pagefind -->
              <!-- todo remove hashes -->
              <div class="pagefind-ui svelte-e9gkc3">
                <form class="pagefind-ui__form svelte-e9gkc3" role="search" aria-label="Search the site"
                      action="javascript:void(0);"><input class="pagefind-ui__search-input svelte-e9gkc3" type="text"
                                                          placeholder="Search…" title="Search…" autocapitalize="none"
                                                          enterkeyhint="search">
                  <button class="pagefind-ui__search-clear svelte-e9gkc3 pagefind-ui__suppressed">×</button>
                  <div class="pagefind-ui__drawer svelte-e9gkc3 pagefind-ui__hidden"></div>
                </form>
              </div>
              </div>
            </div>
        </div>
      </div>
  </nav>
</header>