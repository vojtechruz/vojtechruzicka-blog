{% extends "layouts/page.njk" %}

{% block pageContent %}

{% set tagsByCount = collections.tagStats | sortByCountThenName %}

<ul class="tag-list">
  {% for tag in tagsByCount %}
    <li>
      <a href="/tags/{{ tag.name | slugify }}/">{{ tag.name }} ({{ tag.count }})</a>
    </li>
  {% endfor %}
</ul>

{% endblock %}