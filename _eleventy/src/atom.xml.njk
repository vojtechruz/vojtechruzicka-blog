---
permalink: /atom.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <link href="{{ site.url }}/" />
  <link rel="self" type="application/atom+xml" href="{{ '/atom.xml' | absoluteUrl(site.url) }}" />
  <updated>{{ (collections.posts | first).date | toRfc3339 }}</updated>
  <id>{{ site.url }}/</id>
  <subtitle>{{ site.description }}</subtitle>

  {% for post in collections.posts %}
  {% if post.date >= feeds.minDate %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ post.url | absoluteUrl(site.url) }}" />
    <id>{{ post.url | absoluteUrl(site.url) }}</id>
    <updated>{{ post.date | toRfc3339 }}</updated>

    {% set body = (post.data.description or post.templateContent) | htmlToAbsoluteUrls(site.url) | safe %}
    <summary type="html"><![CDATA[{{ post.data.excerpt }}]]></summary>
    <content type="html"><![CDATA[{{ body }}]]></content>
  </entry>
  {% endif %}
  {% endfor %}
</feed>
